iframe.hidden(name="postframe", id="postframe", src="about:none")
#pageinfo
  #meta_cid.hidden #{cid}
  #meta_page.hidden #{page}
  #meta_modalities.hidden #{modalities}
  #meta_description.hidden #{description}
  | by:
  a(href='https://twitter.com/intent/user?screen_name=#{creator}', title='Link to twitter')
    @#{creator}
  | &#x2002;
  - if (bookmarked)
    img.control.rmbookmark(ID='#{cid}', src='/icons/bookmark.png')
  - else 
    img.control.bookmark(ID='#{cid}', src='/icons/bookmark_bw.png')
  span#lock
    a.abutton#lock(title='Edit Page')
      span#locked
        img.control(src='/icons/pencil.png')
      span#open
        img.control(src='/icons/tick.png')
  span#controls
    img.control#help(src='/icons/question.png')
    img.control#savepage(src='/icons/disc.png')
    span#savepage_dialog(style='display:none')
      button(id='savepage_confirm', type='button')
        | Save page
    img.control#deletepage(src='/icons/minus.png')
    span#deletepage_dialog(style='display:none')
      button(id='deletepage_confirm', type='button')
        | Delete Page
    img.control#newpage(src='/icons/plus.png')
    img.control#boxit(src='/icons/box.png')
  #created(style='display:none')
    | #{created}
#title
  .txt
    textarea.mdtxt(style='display:none')
      ##{title}
    .md
    img.control.textedit.session(src='/icons/pencil.png')
a#prevpage(href='/case/#{cid}/#{prevpage}')
  img.control(src='/icons/arrow-180.png')
a#nextpage(href='/case/#{cid}/#{nextpage}')
  img.control(src='/icons/arrow.png')
#texts
  .txt
    textarea.mdtxt(style='display:none')
      #{texts}
    .md
    img.control.textedit.session(src='/icons/pencil.png')
  br
  br
#radios
  - each r in radios
    .radio(id='#{r.ID}')
      .stack
        - if (r.images)
          - each i in r.images
            img.stack_image(src='#{i}')
      img.control.removeradio(style='display:none', src='/icons/cross.png')
      .caption
        textarea.mdtxt(style='display:none')
          #{r.caption}
        .md
        img.control.textedit(src='/icons/pencil.png')
      br
  img.control#addstack(style='display:none', src='/icons/plus.png')
  #markdown-help(style='display:none')
    textarea.mdtxt(style='display:none')
      #{mdhelp}
    .md
    img.control.textedit.session(src='/icons/pencil.png')
img.control#feedbackbutton(src='/icons/balloon.png')
#feedbackarea(style='display:none')
  #feedbacktext
  textarea#feedbackbox
  br
  button#feedback_confirm(type='button')
    | Send comment
#info(style='display:none')
script(type='text/javascript')
  $(function(){
    $("#{modalities}").each(function(){
      $(this).attr("checked",true);
    });
    $("#{description}").each(function(){
      $(this).attr("checked",true);
    });
    $("##{language}").attr("checked", true);
    var cid = '#{cid}';
    var page = '#{page}';
    if(#{editor}=='1') {
      $("#lock").show();
      };
  });
