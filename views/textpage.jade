iframe.hidden#postframe(name="postframe", src="about:none")
#pageinfo
  #meta_cid.hidden #{cid}
  #meta_page.hidden #{page}
  | by:
  a(href='https://twitter.com/intent/user?screen_name=#{creator}', title='Link to twitter')
    @#{creator}
  | &#x2002;
  - if (bookmarked)
    img.rmbookmark(ID='#{cid}', src='/static/ico/star.png')
  - else 
    img.bookmark(ID='#{cid}', src='/static/ico/star-empty.png')
  span#lock
    a.abutton#lock(title='Edit Page')
      span#locked
        img.control(src='/static/ico/pencil_bw.png')
      span#open
        img.control(src='/static/ico/tick_bw.png')
  span#controls
    img.control#help(src='/static/ico/question_bw.png')
    img.control#savepage(src='/static/ico/disc_bw.png')
    span#savepage_dialog(style='display:none')
      button(id='savepage_confirm', type='button')
        | Save page
    img.control#deletepage(src='/static/ico/minus_bw.png')
    span#deletepage_dialog(style='display:none')
      button(id='deletepage_confirm', type='button')
        | Delete Page
    img.control#newpage(src='/static/ico/plus_bw.png')
    img.control#boxit(src='/static/ico/box_bw.png')
  #created(style='display:none')
    | #{created}
#title
  .txt
    textarea.mdtxt(style='display:none')
      ###{title}
    .md.gray
    img.control.textedit.session(src='/static/ico/pencil_bw.png')
a#prevpage(href='/case/#{cid}/#{prevpage}')
  img(src='/static/ico/arrow-180.png')
a#nextpage(href='/case/#{cid}/#{nextpage}')
  img(src='/static/ico/arrow.png')
#texts(style='width: 100%')
  - each text in texts
    a.toggletext Show/hide next text
      .txt
        textarea.mdtxt(style='display:none')
          #{text.value}
        .md
        img.control.textedit.session(src='/static/ico/pencil.png')
  img.control#addtext(style='display:none', src='/static/ico/plus_bw.png')
  br
  br
#markdown-help(style='display:none')
  img.control.textedit.session(src='/static/ico/pencil.png')
  img.control.Cancel(src='/static/ico/cross-circle.png')
  textarea.mdtxt(style='display:none')
    #{mdhelp}
  .md
img.control#feedbackbutton(src='/static/ico/balloon.png')
#feedbackarea(style='display:none')
  #feedbacktext
  textarea#feedbackbox
  br
  button#feedback_confirm(type='button')
    | Send
#info(style='display:none')
script(type='text/javascript')
  $(function(){
    $("#{modalities}").each(function(){
      $(this).attr("checked",true);
    });
    $("#{description}").each(function(){
      $(this).attr("checked",true);
    });
    $("##{language}").attr("checked", true);
    var icds = ['#{icds}'];
    if(icds[0] != ""){
      for (var i=0; i < icds.length; i++){
        $("#icd").append("<div class='ICDCode'><a class='icdt'>" + icds[i] + "</a><a class='removeICD'><img class='control' src='/static/ico/small_minus_bw.png'></a></div><br>");
      }
    }
    var cid = '#{cid}';
    var page = '#{page}';
    if(#{editor}=='1') {
      $("#lock").show();
      };
    if(#{private}=='1'){$('#private').attr('checked', true);}
  });
