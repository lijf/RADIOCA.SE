extends layout

block mainContent
  #indexhorizon
    .big_logo 
      img#logo(src='static/img/cases_logo.svg')
      img#compactlogo.hidden(src='static/img/cases_logo_compact.svg')
    - each r in radios
      #frontradio
        a#list_cases(href='/cases/0/-1') 
          img#fparrow(src='static/img/cases_arrows-03.svg')
        .radio(id='frontpageRadio') 
          .stack(tabindex='-1')
            - if (r.images)
              - each i in r.images
                img.stack_image(src='#{i}')
  script(type='text/javascript')
    $(document).ready(function(){
      $('#header').hide();
      $('#footer').hide();
      $('.sign_in_with_twitter').hide();
      visimg = $('#frontradio > .radio > .stack > .stack_image:visible:first');
      $(window).load(function(){
        return setInterval(function(){
        if (visimg.next().length){
          visimg.next().show();
          visimg.hide();
          visimg = visimg.next();
        }
        }, 350)
      });
      });
