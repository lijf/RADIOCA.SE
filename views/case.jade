#wrap
  #taco
    #column_1.col1
      -each radio in radios
        .radio
          .stack(url='#{radio.img}', class='img512', style='background-image: url("/image/#{radio.img}")')
          .caption
            textarea.mdtxt(style='display:none')
              #{radio.caption}
            .md

    #column_2.col2
      -each text in texts
        .txt
          textarea.mdtxt(style='display:none')
            #{text}
          .md
    #markdown-help
      textarea.mdtxt(style='display:none')
        #{mdhelp}
      .md
    #loginfo
    iframe(id='editbar', src='about:none')
  button(id='editbutton')
    | edit page
  .details
    button(id='facebutt')
      | facebook
    button(id='twitbutt')
      | twitter
script(type='text/javascript')
  $(function(){
    $('#logininfo').hide();

    $('#markdown-help').hide();

    $('#editbar').hide();

    rendermd(); // renders the markdown textareas.

    $(".mdtxt").live({
      blur: function() {
        $(this).hide();
        rendermd();
        $(this).siblings(".md").show();
      }
    }); // hides the textbox and renders the markdown


    $('#editbutton').live({
      click: function(){
      path=location.pathname.split("/");
      $('#editbar').show().attr('src', path[0] + "/" + path[1] + "/" + path[2] + "/" + path[3] + "/edit");
      $(this).hide();
      }
    });
      
  });
