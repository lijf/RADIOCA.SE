#wrap
  button(id='editbutton')
    | edit page
  #taco
    #column_1.col1
      -each radio in radios
        .radio
          .stack(url='#{radio.img}', class='img512', style='background-image: url("/images/#{radio.img}.jpg")')
          .caption
            textarea.mdtxt(style='display:none')
              #{radio.caption}
            .md

    #column_2.col2
      -each text in texts
        .txt
          textarea.mdtxt(style='display:none')
            #{text}
          .md
    #markdown-help
      textarea.mdtxt(style='display:none')
        #{mdhelp}
      .md
    iframe(id='editbar', src='about:none')
script(type='text/javascript')
  $(function(){

    $('#markdown-help').hide();


    $('#editbar').hide();

    rendermd(); // renders the markdown textareas.

    $(".mdtxt").live({
      blur: function() {
        $(this).hide();
        rendermd();
        $(this).siblings(".md").show();
      }
    }); // hides the textbox and renders the markdown


    $('#editbutton').live({
      click: function(){
      $('#editbar').show().attr('src', window.location.pathname + "edit");
      }
    });
      
  });
