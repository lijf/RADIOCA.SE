#wrap
  button(id='editbutton')
    | edit page
  #columnwrapper
    #columns
      #column
        -each radio in radios
          .stack(url='#{radio}', style='background-image: url("/images/#{radio}.jpg")')
      #column
        -each text in texts
          .txt
            textarea.mdtxt(rows=6, style='display:none')
              #{text}
            .md
iframe(id='editbar', src='about:none')
script(type='text/javascript')
  $(function(){

    $('#editbar').hide();

    rendermd(); // renders the markdown textareas.

    $(".mdtxt").live({
       blur: function() {
           $(this).hide();
           rendermd();
           $(this).siblings(".md").show();
       }
    }); // hides the textbox and renders the markdown


    $('#editbutton').live({
      click: function(){
      $('#editbar').show().attr('src', window.location.pathname + "edit");
      }
    });
      
  });
