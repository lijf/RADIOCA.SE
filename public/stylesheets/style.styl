#container
    margin 0 auto
    width 90%
    padding-top 5px
.big_logo
    color #bbb
    font-family "bank gothic"
    font-weight bold
    font-size 50pt
.small_logo
    font-family calibri
    font-weight bold
    text-decoration none
    float left
    margin 4px
    color #bbb
#footer
    padding 30px 0
    clear both
#session
    padding 2px
    float right
#pageinfo
    padding 2px
    float left
#radios
    float left
    clear left
    width 50%
.stack
    position relative
    overflow hidden
.stack_window
    position absolute
    overflow hidden
.stack_image
    display none
    width 100%
.imgload
    visibility hidden
.deletebutton
    position absolute
    top 5px
    right 5px
.caption>.md
    margin-top -15px
    color #888
#texts
    width 50%
    float right
    clear left
.txt
    background-image url("/images/paper/Texture0213.jpg")
@media screen and (max-width: 450px)
    #container
        padding-top 60px
    #session
        top 5px
        margin 0 auto
    #pageinfo
        top 15px
        margin 0 auto
    #radios
        width 100%
    #texts
        width 100%
@media screen and (min-width: 1024px)
    #radios
        width 65%
    #texts
        width 35%
textarea
    width 100%
    line-height 1.2
    font-family monospace
    font-size 100%
.md
    padding 10px 20px
#markdown-help
    position absolute
    left 5%
    top 30px
    width 512px
    background-image url("/images/paper/Texture0214.jpg")
#editbar
    position fixed
    border none
    top 0px
    left 0px
    margin-top 0px
    height 30px
    width 100%
#controls
    position relative
#savepage
    position fixed
    left 355px
    top 5px
#uploadarea
    position fixed
    left 17%
    top 30%
    background #222
    padding 8px
    border 5px
    border-style solid
    border-color #ccc
    -moz-border-radius 12px
    -webkit-border-radius 12px
button
    background-color #222
    color #888
    -moz-border-radius 12px
    -webkit-border-radius 12px
input
    background-color #222
    color #888
    -moz-border-radius 12px
    -webkit-border-radius 12px
.input1
    background-color #222

.hidden
    width 0px
    height 0px
    display none
html
    height 100%
body
    font-family Georgia, Palatino, serif
    color #888
    background-color #333
    line-height 1
    height 100%
h1, h2, h3, h4 
    color #222
    font-weight 400
h1, h2, h3, h4, h5, p 
    margin-bottom 24px
    padding 0
h1 
    font-size 48px
h2 
    font-size 36px
    margin 24px 0 6px
h3 
    font-size 24px
h4 
    font-size 21px
h5 
    font-size 18px
a 
    color #0099ff
    margin 0
    padding 0
    vertical-align baseline
ul, ol 
    padding 0
    margin 0
li 
    line-height 24px
p, ul, ol 
    font-size 16px
    line-height 24px
    max-width: 540px
pre 
    padding 0px 24px
    max-width 800px
    white-space pre-wrap
code 
    font-family Consolas, Monaco, Andale Mono, monospace
    line-height 1.5
    font-size 13px
aside 
    display block
    float right
    width 390px
blockquote 
    margin 1em 2em
    max-width 476px
blockquote p 
    color #aaa
    max-width 460px
hr 
    width 100%
    text-align left
    margin 0 auto 0 0
    color #aaa
