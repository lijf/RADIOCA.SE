#wrap
    min-height 100%
    overflow auto
#controls
    width 100%
    height 30px
#columnwrapper
    float right
    position relative
    left -50%
#columns
    position relative
    left 50%
#column
    position relative
    float left
#leftcolumn
    position relative
    float left
#righcolumn
    position relative
    float right
    right 0px
    margin-left 32px
#editbutton
    position fixed 
    top 5px
    right 5px
#editbar
    position fixed
    top 0px
    left 0px
    margin-top 0px
    height 30px
    width 100%
    clear both
    background-color #222
.loading
    background-image url("/images/loading_gif.gif")
    background-position 50% 50%
    background-repeat no-repeat
.deletebutton
    position absolute
    top 5px
    right 5px
.stack
    position relative
    width 512px
    height 512px
    padding 0
    border 0
    background-size auto 100%
    overflow hidden
    min-height 512px
.hidden
    width 0px
    height 0px
    display none
    padding 30px
.txt
    min-width 480px
    max-width 480px
    float right
.md
    min-width 480px
    max-width 480px
textarea
    right 0px
    margin-top 10px
    min-width 480px
    max-width 480px
    line-height 1
    font-family monospace
    font-size 110%
html
    height 100%
body
    margin 0 auto
    font-family Georgia, Palatino, serif
    color #444444
    line-height 1
    max-width 960px
    padding 30px
    height 100%
h1, h2, h3, h4 
    color #111111
    font-weight 400
h1, h2, h3, h4, h5, p 
    margin-bottom 24px
    padding 0
h1 
    font-size 48px
h2 
    font-size 36px
    margin 24px 0 6px
h3 
    font-size 24px
h4 
    font-size 21px
h5 
    font-size 18px
a 
    color #0099ff
    margin 0
    padding 0
    vertical-align baseline
ul, ol 
    padding 0
    margin 0
li 
    line-height 24px
p, ul, ol 
    font-size 16px
    line-height 24px
    max-width: 540px
pre 
    padding 0px 24px
    max-width 800px
    white-space pre-wrap
code 
    font-family Consolas, Monaco, Andale Mono, monospace
    line-height 1.5
    font-size 13px
aside 
    display block
    float right
    width 390px
blockquote 
    margin 1em 2em
    max-width 476px
blockquote p 
    color #666
    max-width 460px
hr 
    width 540px
    text-align left
    margin 0 auto 0 0
    color #999
